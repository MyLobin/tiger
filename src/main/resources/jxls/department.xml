        <loop startRow="1" endRow="1" items="departments" var="department" varType="com.lobin.model.Employee">
            <section startRow="1" endRow="1">
                <mapping row="7" col="0">department.name</mapping>
                <mapping row="7" col="1">department.age</mapping>
                <mapping row="7" col="3">department.payment</mapping>
                <mapping row="7" col="4">department.bonus</mapping>
            </section>
            <loopbreakcondition>
                <rowcheck offset="0">
                    <cellcheck offset="0"></cellcheck>
                </rowcheck>
            </loopbreakcondition>
        </loop>
    </worksheet>
